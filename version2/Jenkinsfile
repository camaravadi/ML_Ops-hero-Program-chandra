pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/camaravadi/ML_OPS-HERO-PROGRAM-chandra.git'
            }
        }

        stage('Show workspace') {
            steps {
                sh 'pwd'
                sh 'ls -R'
            }
        }

        stage('Run avg.py') {
            steps {
                dir('version2/app') {
                    sh 'python3 avg.py'
                }
            }
        }
    }
}
